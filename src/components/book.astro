<section class="introduction relative py-12">
  <div class="max-w-screen-lg mx-auto px-10 lg:px-0">
    <div class="space-y-2 mb-7">
      <h2 class="text-2xl font-semibold ">
        好书推荐
      </h2>
      <div class="text-neutral-500 text-lg">我看的书</div>
     </div>

     <div class="grid grid-cols-2 gap-6">
      {
        tools.map((item) => (
            <div class="flex items-center gap-4">
              <img class="h-40 aspect-[7/10] rounded-xl" src={item.img} alt="">
              <div class="flex justify-between flex-col h-full">
                <div>
                  <h2 class="text-lg font-semibold mb-1">{item.name}</h2>
                  <div class="mb-2 text-neutral-500">{item.desc}</div>
                </div>
                <a href={item.button.link} class="text-sm font-medium">{item.button.text}</a>
              </div>
            </div>
          ))
        }
    </div>
  </div>
</section>
