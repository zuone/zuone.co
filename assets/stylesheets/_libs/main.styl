a.link
  padding: 0 10px
  margin: 0 3px
  position relative
  &:before
    content: ''
    position: absolute
    display: block
    transform: translateY(-50%)
    right 0
    top: 50%
    width: 100%
    height calc(100% - 8px)
    border-radius: 6px
    @extend $Transition-Normal
  &:after
    content: ''
    position: absolute
    right 0
    top: 5px
    width: 5px
    height 5px
    border 1px solid $sunglow
    border-radius: 50%
  &:hover
    &:before
      background: rgba($sunglow,0.12)
    color: $sunglow
