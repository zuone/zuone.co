.post-wrapper .pager li
  width: 48%
.post_pagination
  line-height: 40px
  margin: 60px auto 30px auto
  overflow: auto
  width: 900px
  padding: 0 80px
.post_pagination .next
  float: right
.post_pagination .previous
  float: left
.post_pagination a
  color: $gray
  font-size: 28px
  font-weight: 500
  text-decoration: none
  transition: 0.3s all
  &:hover {
    color: #fff
    }
.post_pagination span
  color: $gray-lightest
  font-size: 18px
  font-weight: 500
  line-height: 30px
  text-decoration: none
  transition: 0.3s color
@media only screen and (max-width: 750px)
  .post_pagination
    width: auto
    padding: 0
    margin: 0 auto 40px auto
  .post_pagination a
    font-size: 24px
  .post_pagination span
    font-size: 12px
    display: block
    max-width: 200px
    padding-top: 2px
.post-wrapper .pager li > a
  width: 100%
.post-wrapper .pager li > a > span
