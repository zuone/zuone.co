.post
  .content
    padding 90px 60px 60px 60px
  .post_top
    // font-family: $family-post
    max-width: 900px
    margin-left: auto
    margin-right: auto
    margin-bottom: 60px
@media only screen and (max-width: 750px)
  .post
    .content
      padding 30px 30px 30px 30px
    .post_top
      grid-template-columns: 1fr
      grid-gap: 50px
      padding-top: 30px
.post_top_content
  padding-left: 80px
  padding-right: 80px
  .blog_title
    margin-left: -2px
    margin-bottom: 10px
    font-size: 40px
    font-weight: 700
  .blog_tag span
    letter-spacing: 2px
    color: #8e8e8e
    font-size: 13px
    font-weight: 500
