  .post_top_content
    position: static
    padding-left: 0
    padding-right: 0
    transform: translateY(0)
    .blog_title
      font-size: 30px
.post-wrapper
  margin-left: auto
  margin-right: auto
  font-size: 18px
  color: rgba(255,255,255,.7)
  line-height: 36px
  overflow-x: hidden
  // font-family: $family-post
  max-width: 900px
  :first-child
    margin-top: 0
.blog_tips
  display: block
  font-size: 17px
  letter-spacing: .5px
  color: rgba(#ffffff,0.3)
  -webkit-transition: all 0.5s
  transition: all 0.5s
  margin-top: 12px
  span
    &:not(:last-child):after
      content: ", "
      display: inline
.post-wrapper {
  a,
  ol li,
  p,
  ul li {
    font-weight: 400
  }
}
@media only screen and (max-width: 750px)
  .post-wrapper
    font-size: 16px
    line-height: 32px
    padding-bottom: 30px
    margin-top: 30px
  .post-wrapper p
    padding-left: 0 !important
    padding-right: 0 !important
    margin-bottom: 10px !important
  .post-wrapper img
    width: 100% !important
    margin-left: 0 !important
.post-wrapper img
  display: block
  margin-top: 20px
  margin-bottom: 20px
  max-width: calc(100% + 36px)
  min-width: 50%
  position: relative
  left: 50%
  transform: translateX(-50%)
  border: 1px solid rgba(0, 0, 0, .1);
  border-radius: 6px
.post-wrapper iframe
  display: block
  margin: 0 auto
  width: calc(100% - 110px)
.post-wrapper hr,
.post-wrapper iframe
  margin-bottom: 30px
.post-wrapper {
  blockquote,
  h1,
  h2,
  h3,
  h4,
  h5,
  p {
    padding-left: 80px
    padding-right: 80px
  }
}

.post-wrapper hr,
.post-wrapper pre
  margin-left: 80px
  margin-right: 80px
@media only screen and (max-width: 750px)
  .post-wrapper blockquote,
  .post-wrapper p
    padding-left: 30px
    padding-right: 30px
  .post-wrapper h1,
  .post-wrapper h2,
  .post-wrapper h3,
  .post-wrapper h4
    padding-left: 0
    padding-right: 0
.post-wrapper
  a
    padding: 0 10px
    margin: 0 3px
    border-radius: 6px
    font-weight: 500
    position relative
    color: inherit
    @extend $Transition-Normal
    &:before
      content: ''
      position: absolute
      display: block
      transform: translateY(-50%)
      right 0
      top: 50%
      width: 100%
      height calc(100% - 4px)
      border-radius: 6px
      z-index: 0
      @extend $Transition-Normal
    &:after
      content: ''
      position: absolute
      right 0
      top: 15%
      width: 5px
      height 5px
      border 1px solid $sunglow
      border-radius: 50%
    &:hover
      &:before
        background: rgba($sunglow,0.12)
      color: $sunglow
  h1
    font-size: 30px
    margin: 60px 0 30px
  h2
    font-size: 24px
    margin: 45px 0 20px
  h3
    font-size: 20px
    margin: 40px 0 20px
  h4
    font-size: 18px
    margin: 30px 0 15px
  h5
    font-size: 16px
    margin: 30px 0 15px
  h6
    text-align: center
    font-size: 15px
    font-weight: 400
    margin-top: -20px
    color: $gray-light
    a
      color: #707070
h1 a,
h2 a,
h3 a,
h4 a,
h5 a,
h6 a
  font-weight: inherit !important
h1,
h2,
h3,
h4,
h5,
h6
