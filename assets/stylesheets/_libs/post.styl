  font-weight: normal
  letter-spacing: 0.5px
.post-wrapper p
  margin-bottom: 30px
.blog_header_img
  width: 100%
  object-fit: cover
  border: 1px solid rgba(0, 0, 0, 0.05)
  margin-top: 60px
  border-radius: 2px
  z-index: 10000
/*	Blockquotes  */
blockquote p
  font-size: 20px
  font-weight: 500 !important
  line-height: 38px
  color: rgba(#FFFFFF,1)
  font-style: italic
  padding-right: 0 !important
  padding-left: 30px !important
blockquote
  position: relative
blockquote p a
  margin-right: 20px
blockquote:before
  content: ""
  position: absolute
  -webkit-transform: translate(0, -50%)
  transform: translate(0, -50%)
  left: 81px
  top: 50%
  height: calc(100% - 10px)
  width: 6px
  /* or 100px */
  border-left: 3px solid $gray
@media only screen and (max-width: 750px)
  blockquote,
  blockquote p
    font-size: 16px
    padding-left: 20px !important
    padding-right: 10px !important
  blockquote:before
    left: 0px
blockquote cite
  display: block
  font-size: 12px
  color: $gray
blockquote cite:before
  content: " "
blockquote cite a,
blockquote cite a:visited,
blockquote cite a:visited
  color: $gray